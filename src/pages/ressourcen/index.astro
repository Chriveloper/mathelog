---
import CollectionLayout from "@components/ressourcen/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { sortByDate } from "@lib/sortFunctions";
import type { RessourcenEntry } from "@/types";
import { getIndex } from "@lib/contentParser";

const entryIndex = (await getIndex("ressourcen")) as RessourcenEntry;
const entries = (await getEntries("ressourcen", sortByDate)) as RessourcenEntry[];
---

<CollectionLayout entryIndex={entryIndex} entries={entries} />

---
import CollectionLayout from "@components/materialien/CollectionLayout.astro";
import { getIndex, getGroups } from "@lib/contentParser";
import type { MaterialienEntry } from "@/types";
import { sortByTitle } from "@lib/sortFunctions";

const collectionIndex = (await getIndex("materialien")) as MaterialienEntry;
const groupIndices = (await getGroups("materialien", sortByTitle)) as MaterialienEntry[];
---

<CollectionLayout entries={groupIndices} collectionIndex={collectionIndex} />
